<div class="container" style="width:30%;">
    <center>
        <div class="form-group" style="margin-top:100px">
            <input class="form-control" id="n1" name="" type="text" placeholder="Número 1">
        </div>
        <div class="form-group">
            <input class="form-control" id="n2" name="" type="text" placeholder="Número 2">
        </div>
        <div class="form-group">
            <input class="form-control" id="n3" name="" type="text" placeholder="Número 3">
        </div>
        <button style="margin-top:30px; margin-bottom:0;" class="button" type="button" id="btn" onclick="btn()">somar</button>  
    </center>
</div>
<center>
    <p class="pa" id="parag"></p>                  
</center>

<script>
    function btn(){
        var n1 = document.getElementById("n1").value;
        var n2 = document.getElementById("n2").value;
        var n3 = document.getElementById("n3").value;
        if(!isNaN(n1) && !isNaN(n2) && !isNaN(n3)){
        if(n1==null || n1=="")
            n1=0;
        if(n2==null || n2=="")
            n2=0;
        if(n3==null || n3=="")
            n3=0;
            n1 = parseFloat(n1);
            n2 = parseFloat(n2);
            n3 = parseFloat(n3);
            var resultado = n1+n2+n3;
            document.getElementById("parag").innerHTML = n1+" + "+n2+" + "+n3+" = "+resultado;
        }
        else{
            document.getElementById("parag").innerHTML = "Insira apenas números"
        }
    }
</script>